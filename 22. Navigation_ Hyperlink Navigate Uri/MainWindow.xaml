<Page x:Class="Navigation__Hyperlink_Navigate_Uri.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Navigation__Hyperlink_Navigate_Uri"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
        <!--First of All change window to page in both xaml and cs files-->
        <!--Add a new Page to Navigate To-->
    <Grid>
       <!--HyperLink inside a textblock or label to navigate to new page-->

        <TextBlock>
            <Hyperlink NavigateUri="secondPage.xaml">
                Naviagte TO new Page
            </Hyperlink>
        </TextBlock>
        <!--NavigateUri specifies the page to navigate to-->
    </Grid>
</Page>
